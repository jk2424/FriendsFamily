





<div class="top_half">

  <div class="logo">
    <span href="#logo"> <img class="wwlogo" src="/assets/ww_logo.png" alt=""> </span>
  </div>


  <div class="location">
    <p>MIAMI, FL</p>
  </div>

  <div class="display">
    <div class="temperature"><p>
      <% if @cur_desc = "rain" || @cur_desc = "shower rain" || @cur_desc = "thunderstorm" || @cur_desc= "snow" || @cur_desc = "mist" %>
      <%= image_tag("Rainy_Icon_white@4x-8.png", size: "110x110") %>
      <% elsif @cur_desc = "clear sky" || @cur_desc = "broken clouds" %>
      <%= image_tag("Sunny_icon_white@4x-8.png", size: "110x110") %>
      <% elsif @cur_desc = "scattered clouds" || @cur_desc = "few clouds" %>
      <%= image_tag("Cloudy_Icon2_white@4x-8.png") %>
      <% end %>
      <%= @cur_temp%>Â° </p></div>
  </div>

</div>


<!-- carousel Men -->
<div class="Men active" id="mens">
  <% if @cur_temp <= 45 %>
  <div class="carousel cold">
    <span class="carousel-item" href="#one!"> <%= image_tag("cold_clothes.jpg") %> </span>
    <span class="carousel-item" href="#two!"> <%= image_tag("cold_clothes2.jpg") %> </span>
    <span class="carousel-item" href="#three!"> <%= image_tag("cold_clothes3.jpg") %> </span>
  </div>
  <% elsif @cur_temp > 45 && @cur_temp <= 65 %>
  <div class="carousel chilly">
    <span class="carousel-item" href="#one!"> <%= image_tag("chilly_clothes.jpg") %> </span>
    <span class="carousel-item" href="#two!"> <%= image_tag("chilly_clothes2.jpg") %> </span>
    <span class="carousel-item" href="#three!"> <%= image_tag("chilly_clothes3.jpg") %> </span>
  </div>
  <% elsif @cur_temp > 65 && @cur_temp <= 80 %>
  <div class="carousel warm">
    <span class="carousel-item" href="#one!"> <%= image_tag("warm_clothes.jpg") %> </span>
    <span class="carousel-item" href="#two!"> <%= image_tag("warm_clothes2.jpg") %> </span>
    <span class="carousel-item" href="#three!"> <%= image_tag("warm_clothes3.jpg") %> </span>
  </div>
  <% else %>
  <div class="carousel hot">
    <span class="carousel-item" href="#one!"> <%= image_tag("Sunny_Clothes.jpg")  %> </span>
    <span class="carousel-item" href="#two!"> <%= image_tag("Sunny_clothes2.jpg") %>  </span>
    <span class="carousel-item" href="#three!"> <%= image_tag("Sunny_clothes3.jpg") %> </span>
  </div>
  <% end %>
</div>



